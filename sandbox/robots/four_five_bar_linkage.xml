<mujoco>
    <compiler inertiafromgeom="true"/>
    <option timestep="0.002" />
    <asset>
        <material name="blue__" rgba="0 0 1 1" />
        <material name="red___" rgba="1 0 0 1" />
        <material name="white_" rgba="1 1 1 1" />
        <material name="green1" rgba="0 1 0 1" />
        <material name="green2" rgba="0.2 1 0 1" />

    </asset>
    <worldbody>
        <geom type="box" size="10 10 0.1" pos="0 0 -2" rgba=".9 0 0 1" />
        <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1" />

        <body name="link_1" pos="0 0 0">
            <geom type="cylinder" size=".2    2" pos="0 0 2" euler="0  0 0" material="red___" />
            <geom type="cylinder" size=".25 .25" pos="0 0 4" euler="0 90 0" material="red___" />
            <geom type="cylinder" size=".25 .25" pos="0 0 0" euler="0 90 0" material="red___" />

            <body name="link_2" pos="0.5 0 0" euler="0 0 0">
                <joint name="hinge_1" pos="0 0 0" axis="1 0 0" />
                <geom type="cylinder" size=".2    2" pos="0 2 0" euler="90 0 0" material="blue__" />
                <geom type="cylinder" size=".25 .25" pos="0 4 0" euler="0 90 0" material="blue__" />
                <geom type="cylinder" size=".25 .25" pos="0 0 0" euler="0 90 0" material="blue__" />

                <body name="link_3" pos="-0.5 4 0" euler="0 0 0">
                    <joint name="hinge_2" pos="0 0 0" axis="1 0 0" />
                    <geom type="cylinder" size=".2    1" pos="0 0 1" euler="0  0 0" material="green1" />
                    <geom type="cylinder" size=".25 .25" pos="0 0 0" euler="0 90 0" material="green1" />
                    <site name="site1" pos="0 0 2" euler="0 0 0"/>
                </body>
            </body>

            <body name="link_4" pos="0.5 0 4" euler="0 0 0">
                <joint name="hinge_3" pos="0 0 0" axis="1 0 0" />
                <geom type="cylinder" size=".2    2" pos="0 2 0" euler="90 0 0" material="white_" />
                <geom type="cylinder" size=".25 .25" pos="0 0 0" euler="0 90 0" material="white_" />
                <geom type="cylinder" size=".25 .25" pos="0 4 0" euler="0 90 0" material="white_" />

                <body name="link_5" pos="-0.5 4 0" euler="0 0 0">
                    <joint name="hinge_4" pos="0 0 0" axis="1 0 0" />
                    <geom type="cylinder" size=".2    1" pos="0 0 -1" euler="0 0 0" material="green2" />
                    <geom type="cylinder" size=".25 .25" pos="0 0  0" euler="0 90 0" material="green2" />
                    <site name="site2" pos="0 0 -2" euler="0 0 0"/>
                </body>
            </body>
        </body>
    </worldbody>

    <equality>
        <weld name="kinematic_weld_anchor" active="true" body1="link_3" body2="link_5" anchor="0 0 -2" />
        <weld name="kinematic_weld_anchor_relpose" active="true" body1="link_3" body2="link_5" anchor="0 0 -2" relpose="0 0 4 1 0 0 0"/>
        <weld name="kinematic_weld_site" active="true" site1="site1" site2="site2"/>
    </equality>

</mujoco>
